{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,  // Enable this option
    "emitDecoratorMetadata": true    // Emit metadata required by class-validator
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}